{
    "name": "signal-api",
    "version": "1.0.0",
    "description": "Learning MERN, Typescript & SignalR",
    "main": "src/server.js",
    "type": "commonjs",
    "scripts": {
        "build": "npx tsc",
        "start": "set NODE_ENV=production && node dist/server.js",
        "server": "nodemon dist/server.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js \""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hammahutz/signal-api.git"
    },
    "keywords": [
        "SignalR",
        "MERN",
        "Typescript"
    ],
    "author": "Adam Fritz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hammahutz/signal-api/issues"
    },
    "homepage": "https://github.com/hammahutz/signal-api#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.1",
        "typescript": "^5.3.2"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            "node_modules/**/node_modules"
        ],
        "delay": "2500",
        "env": {
            "NODE_ENV": "development",
            "NODE_CONFIG_DIR": "./config"
        }
    }
}
